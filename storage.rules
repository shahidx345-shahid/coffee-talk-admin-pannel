rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to upload and manage files
    match /coffeeShops/{fileName} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    match /users/{fileName} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }
    
    match /events/{fileName} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }
    
    match /interests/{fileName} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
