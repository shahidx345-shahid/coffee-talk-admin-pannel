rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin collection - only authenticated admins
    match /admins/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.roles;
    }
    
    // Users collection - public read, admin write
    match /users/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Coffee shops collection - public read, admin write
    match /coffeeShops/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Interests collection - public read, admin write
    match /interests/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Events collection - public read, admin write
    match /events/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
